{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
